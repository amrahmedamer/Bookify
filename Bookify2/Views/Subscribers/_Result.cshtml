@model SubscriberSearchResultViewModel

@if (Model is null)
{
    <div class="d-flex justify-content-between alert  bg-light-warning border border-warning border-3 border-dashed d-flex flex-column flex-sm-row w-100 p-5 mb-10">
        <div class="pe-0 pe-sm-10">
            <h5 class="mt-4">No subscribers were found!</h5>
        </div>
        <div class=" pe-0 pe-sm-10">
            <a asp-action="Create" class="btn btn-primary">Add New Subscribes</a>
        </div>
    </div>
}
else
{

    <div class="card">
        <div class="card-body d-flex justify-content-between ">
            <div class="d-flex flex-column justify-content-center">
                <h3>@Model.FullName</h3>
                <div class="mt-3">
                    <a asp-action="Details" asp-route-Id="@Model.Key" class="btn btn-primary">Details</a>
                </div>
            </div>
            <div>
                <div class="symbol symbol-100px">
                    <img src="@Model.ImagerThumbnailUrl" alt="Error" />

                </div>
            </div>
        </div>
    </div>
}