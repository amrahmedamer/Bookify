@model UserFormViewModel
<form asp-action="@(string.IsNullOrEmpty(Model.Id)? "Create":"Edit")"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-begin="onModalBegin"
      data-ajax-success="OnModalSuccess"
      data-ajax-failure="ShowMessageError"
      data-ajax-complete="onModalCompleted">

    @if (!string.IsNullOrEmpty(Model.Id))
    {
        <input type="hidden" asp-for="Id" />

    }
    <div class="mb-5">
        <div class="form-floating">
            <input type="text" class="form-control form-control-solid" placeholder="Full Name" asp-for="FullName" autocomplete="off" />
            <label asp-for="FullName"></label>
        </div>
        <span asp-validation-for="FullName" class="text-danger d-block"></span>
    </div>
    <div class="mb-5">
        <div class="form-floating">
            <input type="text" class="form-control form-control-solid" placeholder="User Name" asp-for="UserName" autocomplete="off" />
            <label asp-for="UserName"></label>
        </div>
        <span asp-validation-for="UserName" class="text-danger d-block"></span>
    </div>
    <div class="mb-5">
        <div class="form-floating">
            <input type="email" class="form-control form-control-solid" placeholder="Email" asp-for="Email" autocomplete="off" />
            <label asp-for="Email"></label>
        </div>
        <span asp-validation-for="Email" class="text-danger d-block"></span>
    </div>
    <div class="mb-5">
        <div class="form-floating">
            <select class="form-select form-select-solid js-select2" data-placeholder="Select Roles" asp-for="SelectRoles" asp-items="@Model.Roles" autocomplete="off">
                <option>Select Roles</option>
            </select>
        </div>
        <span asp-validation-for="SelectRoles" class="text-danger d-block"></span>
    </div>
    @if (string.IsNullOrEmpty(Model.Id))
    {
        <div class="mb-5">
            <div class="form-floating">
                <input type="password" class="form-control form-control-solid" placeholder="Password" asp-for="Password" autocomplete="off" />
                <label asp-for="Password"></label>
            </div>
            <span asp-validation-for="Password" class="text-danger d-block"></span>
        </div>
        <div class="mb-5">
            <div class="form-floating">
                <input type="password" class="form-control form-control-solid" placeholder="ConfirmPassword" asp-for="ConfirmPassword" autocomplete="off" />
                <label asp-for="ConfirmPassword"></label>
            </div>
            <span asp-validation-for="ConfirmPassword" class="text-danger d-block"></span>
        </div>
    }

    <partial name="_ModalFooter" />
</form>