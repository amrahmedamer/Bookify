@model IEnumerable<BookViewModel>
@{
    Layout = "_ReportsLayout";
}

<table id="data">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Categories</th>
            <th>Publisher</th>
            <th>Publishing Date</th>
            <th>Hall</th>
            <th>Available For Rental</th>
            <th >status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@(string.Join(", ", book.Categories))</td>
                <td>@book.Publisher</td>
                <td>@book.Title</td>
                <td>@book.Hall</td>
                <td>@(book.isAvailableForRentel ? "Yes" : "No")</td>
                <td>@(book.IsDeleted ? "Deleted" : "Available")</td>
            </tr>
        }
    </tbody>
</table>