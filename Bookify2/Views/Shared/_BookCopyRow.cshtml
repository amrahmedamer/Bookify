@model BookCopyViewModel
<tr>
    <td>@Model.SerialNumber</td>
    <td>@Model.EditionNumber</td>
    <td>
        <span class="badge badge-light-@(Model.isAvailableForRentel?"success":"warning")">
            @(Model.isAvailableForRentel ? "Available" : "Not Available")
        </span>
    </td>
    <td>
        <span class="badge badge-light-@(Model.IsDeleted?"danger":"success") js-status">
            @(Model.IsDeleted ? "Deleted" : "Availble")
        </span>
    </td>
    <td class="js-date">@Model.CreatedOn</td>
    <td>
        <a class="btn btn-sm btn-light-primary" asp-action="RentalHistory" asp-controller="BookCopies" asp-route-id="@Model.Id">
            History
        </a>
    </td>
    <td class="text-end">
        <a href="#" class="btn btn-sm btn-light btn-flex btn-center btn-active-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
            Action
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M11.4343 12.7344L7.25 8.55005C6.83579 8.13583 6.16421 8.13584 5.75 8.55005C5.33579 8.96426 5.33579 9.63583 5.75 10.05L11.2929 15.5929C11.6834 15.9835 12.3166 15.9835 12.7071 15.5929L18.25 10.05C18.6642 9.63584 18.6642 8.96426 18.25 8.55005C17.8358 8.13584 17.1642 8.13584 16.75 8.55005L12.5657 12.7344C12.2533 13.0468 11.7467 13.0468 11.4343 12.7344Z" fill="currentColor"></path>
            </svg>
        </a>
        <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4" data-kt-menu="true">

            <!--begin::Menu item-->
            <div class="menu-item px-3">
                <a href="javascript:;"
                   data-url="/BookCopies/Edit/@Model.Id"
                   data-title="Edit Copy"
                   class="menu-link px-3 js-render-modal"
                   data-update="true">
                    Edit
                </a>
            </div>
            <!--end::Menu item-->
            <!--begin::Menu item-->
            <div class="menu-item px-3">
                <a class="menu-link px-3 js-toggle-status" data-title="Edit Copy" data-url="/BookCopies/ToggleStatus/@Model.Id">
                    Toggle Status
                </a>
            </div>
            <!--end::Menu item-->
        </div>
    </td>
</tr>