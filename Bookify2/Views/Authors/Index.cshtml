@model IEnumerable<AuthorViewModel>
@{
    ViewData["Title"] = "Authors";
}
@section styles{
    <link href="~/assets/plugins/datatables/datatables.bundle.css" rel="stylesheet" />
}
<div class="alert  bg-light-primary border border-primary border-3 border-dashed d-flex  p- mb-5 justify-content-between">

    <div class="d-flex align-items-center">
        <span class="symbol symbol-50px me-4">
            <!--begin::Svg Icon | path: icons/duotune/general/gen014.svg-->
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-journal-plus" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8 5.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V10a.5.5 0 0 1-1 0V8.5H6a.5.5 0 0 1 0-1h1.5V6a.5.5 0 0 1 .5-.5"></path>
                <path d="M3 0h10a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-1h1v1a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1v1H1V2a2 2 0 0 1 2-2"></path>
                <path d="M1 5v-.5a.5.5 0 0 1 1 0V5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1zm0 3v-.5a.5.5 0 0 1 1 0V8h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1zm0 3v-.5a.5.5 0 0 1 1 0v.5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1z"></path>
            </svg>
            <!--end::Svg Icon-->
        </span>
        Authors
    </div>
    <!--end::Content-->
    <!--begin::Close-->
    <div class="card-toolbar">
        <a href="Javascript:;" class="btn btn-sm btn-primary js-render-modal" data-title="Add Author" data-url="/Authors/Create">
            <i class="bi bi-plus-square-dotted"></i>
            Add
        </a>
    </div>
    <!--end::Close-->
</div>

<div class="card shadow-sm">
    <partial name="_DatatableHeader" /> 
    <div class="card-body">

        <div class="table-responsive">
            <table class="table table-row-dashed table-row-gray-300 table-hover gy-2 align-middle js-datatable" data-document-title="Authors">
                <thead>
                    <tr class="fw-bold fs-6 text-gray-800">
                        <th>id</th>
                        <th>Name</th>
                        <th>Status</th>
                        <th>Created On</th>
                        <th>Last Updated On</th>
                        <th class="text-end js-no-export">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <partial name="_AuthorRow" model="@item" />
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@Html.AntiForgeryToken()
@section plugins{
    <script src="~/assets/plugins/datatables/datatables.bundle.js"></script>
    <script src="~/assets/plugins/datatables/vfs-font.js" asp-append-version="true"></script>
}
@section Scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />
}



