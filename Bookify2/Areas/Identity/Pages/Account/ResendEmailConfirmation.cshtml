@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<div class="d-flex flex-column flex-center flex-column-fluid">
    <!--begin::Content-->
    <div class="d-flex flex-column flex-center text-center p-10">
        <!--begin::Wrapper-->
        <div class="card card-flush w-lg-650px py-5">
            <div class="card-body py-15 py-lg-20">

                <!--begin::Logo-->
                <div class="mb-14">
                    <img alt="Logo" src="~/assets/images/logo.png" class="h-60px">
                </div>
                <!--end::Logo-->
                <!--begin::Title-->
                <h1 class="fw-bolder text-gray-900 mb-5">
                    Verify your email
                </h1>
                <!--end::Title-->
                <!--begin::Action-->
                <div class="fs-6 mb-8">
                    <span class="fw-semibold text-gray-500">Did’t receive an email?</span>
                </div>
                <!--end::Action-->
                <!--begin::Link-->
                <div class="mb-11">
                    <form method="post">
                        <input type="hidden" asp-for="Input.Username" class="form-control" aria-required="true" />
                        <button type="submit" class="btn btn-sm btn-primary">Send Again</button>
                    </form>
                </div>
                <!--end::Link-->
                <!--begin::Illustration-->
                <div class="mb-0">
                    <img src="~/assets/images/mail_sent-rafiki.svg" class="mw-100 mh-300px theme-light-show" alt="">
                    <img src="~/assets/images/mail_sent-rafiki.svg" class="mw-100 mh-300px theme-dark-show" alt="">
                </div>
                <!--end::Illustration-->

            </div>
        </div>
        <!--end::Wrapper-->
    </div>
    <!--end::Content-->
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
